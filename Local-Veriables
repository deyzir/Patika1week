//a local variable is a variable that is defined within a function and is only accessible within that function.
//Local variables are used to store temporary values that are needed while a function is executing,
//and they are destroyed when the function finishes executing.
//here in example codes;

// SPDX-License-Identifier: GPL-3.0

pragma solidity >=0.7.0 <0.9.0;
  

contract localveriables{
    bool public fals;
    uint public numb;
    string public str;
    address public addr;
    function get() external {
        fals = true;    
        numb = 23;
        addr = address(2323345235234524352);
    }
}


// SPDX-License-Identifier: GPL-3.0

pragma solidity >=0.7.0 <0.9.0;
contract LocalVariables {
    uint public value;

    function setValue(uint newValue) public {
        // Declare a local variable
        uint localValue;

        // Assign a value to the local variable
        localValue = newValue;

        // Modify the value of the local variable
        localValue = localValue * 2;

        // Set the contract's value to the local variable
        value = localValue;
    }
}
